<div id="product_list">
  <h1>Listing Products</h1>
  <table>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_lie_even') %>">
        <td>
          <%= image_tag(product.image_url, :size => '150x150',
                        :border => 1) %>
        </td>
        <td class="list_discription">
          <dl>
           <dt><%= product.name + " (Category: " + product.category.name + ")"%></dt>
           <dd><%= truncate(strip_tags(product.description),
                   :length => 100) %></dd>
          </dl>
        </td>

        <td class="list_actions">
          <% if is_employee %>
            <%= link_to 'Show', product %><br/>
            <%= link_to 'Edit', edit_product_path(product) %><br/>
            <%= button_to 'Destroy',  product,
                          :method => :delete %>
          <% else %>
            <%= button_to 'Add to Cart', line_items_path( :product_id => product),
                          :remote => true %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<br/>

<%= link_to 'New Product', new_product_path %>
<p><%= will_paginate @products %></p>
